<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorWithe">

    <TextView
        android:id="@+id/tvWidgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_bar_size"
        android:text="@string/app_name"
        android:textColor="@color/colorWithe"
        android:textStyle="bold"
        android:textSize="@dimen/fa_add_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnWidgetTitle"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/btnWidgetTitle"
        android:layout_width="@dimen/widget_bar_size"
        android:layout_height="@dimen/widget_bar_size"
        android:background="@color/colorAccentButtonAdd"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="+"
        android:textSize="@dimen/fa_add_margin"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvAppwidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/there_are_no_notes_click_on_the_top_right"
        android:text="@string/there_are_no_notes_click_on_the_top_right"
        android:textSize="@dimen/fa_add_margin"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:visibility="visible"
        />

    <ListView
        android:id="@+id/lvAppWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</RelativeLayout>